#! /bin/bash

git config -f $HOME/.gitconfig --global user.name "St√©phane GAUTIER"
git config -f $HOME/.gitconfig --global user.email educatux@gmail.com

git config -f $HOME/.gitconfig --global alias.st status
git config -f $HOME/.gitconfig --global alias.ci commit
git config -f $HOME/.gitconfig --global alias.co checkout
git config -f $HOME/.gitconfig --global alias.br branch
git config -f $HOME/.gitconfig --global alias.glog 'log --oneline --decorate'

git config -f $HOME/.gitconfig --global color.branch auto
git config -f $HOME/.gitconfig --global color.diff auto
git config -f $HOME/.gitconfig --global color.interactive auto
git config -f $HOME/.gitconfig --global color.status auto
